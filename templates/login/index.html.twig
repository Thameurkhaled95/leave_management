{# {% extends 'base.html.twig' %} #}

{% block stylesheets %}
	{# {{ parent() }} #}
	{{ encore_entry_link_tags('login') }}

{% endblock %}
{% block javascripts %}
	{# {{ parent()}} #}
	{{ encore_entry_script_tags('login') }}

{% endblock %}
{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form action="{{ path('app_login') }}" method="post" class="login" id='login-form'>
		<label for="username">Email:</label>
		<input type="text" id="username" name="_username" value="{{ last_username }}">

		<label for="password">Password:</label>
		<input
		type="password" id="password" name="_password">

		{#  the user is redirected to on success #}
		<input
		type="hidden" name="_target_path" value="/conges">

		{# protected login form against CSRF attacks. #}
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        
		<input type="submit" value = "Login"/>
	</form>

{% endblock %}
