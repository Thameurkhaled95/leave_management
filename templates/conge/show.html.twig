{% extends 'base.html.twig' %}

{% block title %}Conge{% endblock %}

{% block body %}
    <h1>Conge</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ conge.id }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ conge.dateDebut ? conge.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ conge.dateFin ? conge.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ conge.status }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ conge.commentaire }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_conge_index') }}">voir la liste</a>
    {% if is_granted('edit', conge)   %}
    <a href="{{ path('app_conge_edit', {'id': conge.id}) }}">edit</a>
    {% endif %}
    {{ include('conge/_delete_form.html.twig') }}
{% endblock %}
