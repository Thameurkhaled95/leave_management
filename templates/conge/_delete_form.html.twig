{% if is_granted('edit', conge)   %}
	<form method="post" action="{{ path('app_conge_delete', {'id': conge.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ conge.id) }}">
		<button class="btn btn-icon btn-error"><i class="fa fa-trash"></i></button>
	</form>
{%  endif %}
